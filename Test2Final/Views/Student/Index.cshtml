@model IEnumerable<Test2Final.Models.StudentModel>

@{
    ViewBag.Title = "Index";
}
<div>
    <h2>Student List</h2>

    <p style="text-align:right">
        @Html.ActionLink("Create New", "AddorEdit", null, new { @class = "btn btn-primary" })
    </>

</div>

<table class="table">
    <tr style="text-align: center">
        <th>
            Admission No.
        </th>
        <th>
            Subject
        </th>
        <th>
            Max Marks
        </th>
        <th>
            Min Marks
        </th>
        <th>
            Marks Obtained
        </th>
        <th>
            Status
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align: center">
            <td>
                @Html.DisplayFor(modelItem => item.admnNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maxMarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minMarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.ActionLink("Edit", "AddorEdit", new { id = item.id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this item?');" })

            </td>
        </tr>
    }

</table>
